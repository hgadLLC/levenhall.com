---
interface Props {
    heading?: string;
    description?: string;
    primaryLabel?: string;
    primaryHref?: string;
    secondaryLabel?: string;
    secondaryHref?: string;
}

const {
    heading = 'Ready to Enter the US Defense Market?',
    description = 'Schedule a confidential consultation to explore how Levenhall can architect your market entry through strategic partnerships and proven procurement pathways.',
    primaryLabel = 'Schedule Consultation',
    primaryHref = 'https://calendly.com/hgad-levenhall/30min',
    secondaryLabel = '',
    secondaryHref = '',
} = Astro.props;
---

<section class="cta-section">
    <div class="cta-bg"></div>
    <div class="cta-inner">
        <div class="cta-accent"></div>
        <h2>{heading}</h2>
        <p>{description}</p>
        <div class="btn-group" style="justify-content: center;">
            <a href={primaryHref} class="btn btn-gold" target={primaryHref.startsWith('http') ? '_blank' : undefined} rel={primaryHref.startsWith('http') ? 'noopener noreferrer' : undefined}>{primaryLabel}</a>
            {secondaryLabel && (
                <a href={secondaryHref} class="btn btn-outline-white">{secondaryLabel}</a>
            )}
        </div>
    </div>
</section>

<style>
    .cta-section {
        background: linear-gradient(135deg, var(--burgundy-deep) 0%, var(--burgundy) 50%, #9e1a3e 100%);
        padding: 5rem 2rem;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

    .cta-bg {
        position: absolute;
        inset: 0;
        background-image:
            radial-gradient(ellipse at 50% 50%, rgba(201, 169, 97, 0.08) 0%, transparent 50%),
            radial-gradient(ellipse at 80% 20%, rgba(255, 255, 255, 0.03) 0%, transparent 40%);
        pointer-events: none;
    }

    .cta-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, transparent, var(--gold), transparent);
        opacity: 0.4;
    }

    .cta-inner {
        max-width: 680px;
        margin: 0 auto;
        position: relative;
        z-index: 1;
    }

    .cta-accent {
        width: 40px;
        height: 2px;
        background: var(--gold);
        margin: 0 auto 2rem;
    }

    .cta-section h2 {
        font-size: clamp(1.6rem, 3vw, 2.2rem);
        color: #fff;
        margin-bottom: 1.2rem;
    }

    .cta-section p {
        color: rgba(255, 255, 255, 0.65);
        font-size: 1.05rem;
        line-height: 1.75;
        margin-bottom: 2rem;
    }
</style>
