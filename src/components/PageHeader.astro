---
interface Props {
    label: string;
    title: string;
    description?: string;
}

const { label, title, description } = Astro.props;
---

<section class="page-header">
    <div class="page-header-bg"></div>
    <div class="page-header-glow"></div>
    <div class="page-header-inner">
        <span class="page-header-label">{label}</span>
        <h1>{title}</h1>
        {description && <p>{description}</p>}
        <div class="page-header-accent"></div>
    </div>
</section>

<style>
    .page-header {
        background: linear-gradient(135deg, #080e1c 0%, var(--deep-navy) 40%, #162d4f 100%);
        padding: 9rem 2rem 4rem;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

    .page-header-bg {
        position: absolute;
        inset: 0;
        background-image:
            radial-gradient(ellipse at 20% 80%, rgba(201, 169, 97, 0.05) 0%, transparent 50%),
            radial-gradient(ellipse at 80% 20%, rgba(30, 58, 95, 0.2) 0%, transparent 50%);
        pointer-events: none;
    }

    .page-header-glow {
        position: absolute;
        inset: 0;
        background: radial-gradient(ellipse at 50% 100%, rgba(201, 169, 97, 0.06) 0%, transparent 60%);
        pointer-events: none;
    }

    .page-header::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, transparent 0%, var(--gold) 50%, transparent 100%);
        opacity: 0.5;
    }

    .page-header-inner {
        max-width: 750px;
        margin: 0 auto;
        position: relative;
        z-index: 1;
    }

    .page-header-label {
        display: inline-block;
        font-family: 'Source Sans Pro', sans-serif;
        font-weight: 600;
        font-size: 0.68rem;
        letter-spacing: 3.5px;
        text-transform: uppercase;
        color: var(--gold);
        background: rgba(201, 169, 97, 0.08);
        border: 1px solid rgba(201, 169, 97, 0.15);
        padding: 0.5rem 1.4rem;
        margin-bottom: 1.5rem;
    }

    .page-header h1 {
        color: #fff;
        font-size: clamp(2.4rem, 5vw, 3.6rem);
        margin-bottom: 1rem;
    }

    .page-header p {
        color: rgba(255, 255, 255, 0.5);
        font-size: 1.1rem;
        line-height: 1.75;
        max-width: 600px;
        margin: 0 auto;
    }

    .page-header-accent {
        width: 60px;
        height: 2px;
        background: var(--gold);
        margin: 2rem auto 0;
    }
</style>
